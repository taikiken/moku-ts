{
  "name": "moku-ts",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest src",
    "lint": "eslint './src/**/*.ts'",
    "format": "prettier --write './src/**/*.ts'",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.md": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "intersection-observer": "^0.12.0",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.2",
    "vite": "^2.6.0"
  },
  "browserlist": [
    "defaults",
    "maintained node versions",
    "last 2 versions",
    "IE 11",
    "iOS >= 13"
  ]
}
